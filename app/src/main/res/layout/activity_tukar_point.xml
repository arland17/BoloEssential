<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_polos"
    tools:context="loyality.member.cafe.boloessentials.halaman_userandworker.TukarPointActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="1350dp"
        android:layout_height="480dp"
        android:backgroundTint="#D3D3D3"
        app:cardCornerRadius="60dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <!-- Baris 1 -->
        <RelativeLayout
            android:id="@+id/row_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

                <!-- Kolom 1 -->
                <RelativeLayout
                    android:id="@+id/col_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"/>

                </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_circle_24"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="350dp"
                android:id="@+id/Page"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_circle_24"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="390dp"
                android:id="@+id/unPage"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tukar"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/brownAdmin"
        android:textSize="16sp"
        android:background="@drawable/background_buttonakses"
        android:textAllCaps="false"
        android:layout_marginTop="460dp"/>

</RelativeLayout>