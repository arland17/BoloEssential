<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="loyality.member.cafe.boloessentials.halaman_userandworker.LoginActivity"
    android:background="@drawable/background_polos"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="234dp"
        android:layout_height="213dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/etID"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_id"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:textSize="20dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="45dp"
        android:id="@+id/refresh"
        android:layout_marginLeft="720dp"
        android:background="@drawable/baseline_refresh_24"/>
    <Button
        android:id="@+id/btnAkses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_buttonakses"
        android:fontFamily="@font/roboto_black"
        android:text="Akses"
        android:textAllCaps="false"
        android:textColor="#C09B75"
        android:textSize="20dp">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAkses"
        android:text="Don't have an access login?"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tvAccessLogin">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAccessLogin"
        android:text="Click Here"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/black"
        android:id="@+id/tvClick"
        android:textAlignment="center"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="150dp">
    </TextView>

</RelativeLayout>