<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#f8f9fa"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true">
            <TextView
                android:textSize="15sp"
                android:textColor="#c09a75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Berhasil Tukar Point"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="center"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/brownAdmin"
                android:id="@+id/tvPointTukarPoint"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="center"/>
            <Button
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/btnExport"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="600dp"
                android:text="@string/export"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_export"
                android:backgroundTint="@color/brownAdmin"
                app:cornerRadius="20dp"/>
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp">
                <TableRow
                    android:background="@color/brownAdmin"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:layout_weight="0.5"/>
                    <View
                        android:background="@android:color/black"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_weight="1"/>
                    <View
                        android:background="@android:color/black"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Tanggal Request"
                        android:layout_weight="0.5"/>
                    <View
                        android:background="@android:color/black"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="ID Transaksi"
                        android:layout_weight="1"/>
                    <View
                        android:background="@android:color/black"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Total"
                        android:layout_weight="0.5"/>
                    <View
                        android:background="@android:color/black"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Nomor Handphone"
                        android:layout_weight="0.8"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="280dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"/>
                <Spinner
                    android:id="@+id/spinnerPageLength"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llPagination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="600dp"
                android:layout_marginTop="280dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:id="@+id/previousButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:id="@+id/nextButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>
