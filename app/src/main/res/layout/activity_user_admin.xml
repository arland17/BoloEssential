<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halaman_admin.UserAdminActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="480dp"
        android:backgroundTint="#F8F9FA"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        android:layout_marginBottom="20dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLogo2"
                android:layout_width="78dp"
                android:layout_height="74dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo2" />

            <TextView
                android:id="@+id/tvDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLogo2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:drawableStart="@drawable/ic_dashboard"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:textColor="#6C757D"
                android:text="Dashboard"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDashboard"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:textColor="#6C757D"
                android:textSize="12sp"
                android:text="User" />

            <TextView
                android:id="@+id/tvTukarPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUser"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_tukarpoint"
                android:drawablePadding="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:textColor="#6C757D"
                android:text="Tukar Point" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTukarPoint"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_tukarhadiah"
                android:textSize="12sp"
                android:drawablePadding="13dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:text="Tukar Hadiah"
                android:textColor="#6C757D"
                android:id="@+id/tvTukarHadiah"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTukarHadiah"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/baseline_checklist_24"
                android:drawablePadding="10dp"
                android:textSize="12sp"
                android:drawableTint="#6C757D"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:textColor="#6C757D"
                android:text="Administrator"
                android:id="@+id/tvAdministrator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdministrator"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_absen"
                android:drawablePadding="13dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#6C757D"
                android:gravity="left"
                android:text="Absen"
                android:id="@+id/tvAbsen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAbsen"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="12sp"
                android:drawableTint="#6C757D"
                android:drawableStart="@drawable/baseline_card_giftcard_24"
                android:drawablePadding="9dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#6C757D"
                android:gravity="left"
                android:text="Hadiah"
                android:id="@+id/tvHadiah"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="810dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#F8F9FA"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogout"
            android:layout_gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingTop="10dp"
                android:paddingRight="17dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="20dp"
                android:text="Administrator"
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/roboto_bold"
        android:text="User"
        android:textAlignment="center"
        android:textColor="#C09A75"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#F8F9FA"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="User"
            android:textAlignment="center"
            android:textColor="#C09A75"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:id="@+id/tvPointUser"
            android:background="@color/white"
            android:textAlignment="center"
            android:textColor="#C09A75"
            android:textSize="15sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="470dp"
            android:text="@string/export"
            android:drawablePadding="5dp"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            android:textSize="12sp"
            android:id="@+id/btnExport"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_export"
            android:backgroundTint="@color/brownAdmin"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="580dp"
            android:text="Tambah User"
            android:drawablePadding="5dp"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            android:id="@+id/btnTambahUser"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_export"
            android:backgroundTint="@color/brownAdmin"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brownAdmin"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="Nama"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.5"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Tanggal Request"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="ID Menu"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="No Telepon"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Aksi"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>