<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="loyality.member.cafe.boloessentials.halaman_userandworker.LoginActivity"
    android:background="@drawable/background_polos"
    android:gravity="center">


    <EditText
        android:id="@+id/etID"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_id"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_horizontal"
        android:hint="ID Transaksi"
        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etBiaya"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_id"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="Total Biaya Transaksi"
        android:layout_below="@+id/etID"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_buttonakses"
        android:text="Submit"
        android:textColor="#C09B75"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_black"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/etBiaya"
        android:layout_marginTop="20dp">
    </Button>



</RelativeLayout>