<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="978dp"
            android:backgroundTint="#ECECEC"
            android:layout_centerHorizontal="true"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTambahKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="400dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tambah Karyawan"
                android:textColor="@color/brownAdmin"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-19dp"
                android:layout_marginBottom="200dp">

                <TextView
                    android:id="@+id/tvNomorKtpKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="240dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="No KTP"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etNomorKtpKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-19dp"
                android:layout_marginBottom="200dp">

                <TextView
                    android:id="@+id/tvNomorIDKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etNomorKtpKaryawan"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="No ID"
                    android:textSize="14sp"
                    tools:ignore="NotSibling" />

                <EditText
                    android:id="@+id/etNomorIDKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="150dp">

                <TextView
                    android:id="@+id/tvNamaKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="105dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Nama"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etNamaKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="75dp">

                <TextView
                    android:id="@+id/tvEmailKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="115dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Email"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etEmailKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-13dp">

                <TextView
                    android:id="@+id/tvTelponKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="110dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="No Telfon Karyawan"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTelponKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="phone"
                    android:paddingLeft="10dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/tvTanggalLahirKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="130dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Tanggal Lahir"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTanggalLahirKaryawan"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_id"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="datetime"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/tvGenderKaryawan"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="320dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Gender"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pria"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Wanita"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginRight="100dp">

                <TextView
                    android:id="@+id/tvFotoKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="395dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Foto"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivFotoKaryawan"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/tvFotoKaryawan"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/background_id"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/btnUploadFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivFotoKaryawan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Upload Foto" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnSubmitTambahKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="460dp"
                android:background="@color/brownAdmin"
                android:fontFamily="@font/poppins_regular"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>