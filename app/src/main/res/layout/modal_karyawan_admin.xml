<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:backgroundTint="#ECECEC"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="230dp"
                android:layout_marginBottom="200dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Absen :"
                android:textColor="@color/brownAdmin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvNamaKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="11.1dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Taufik Hazel"
                android:textColor="@color/brownAdmin"
                android:textSize="16sp" />
            <TableLayout
                android:id="@+id/tableLayoutKaryawan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brownAdmin"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="Hari"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Tanggal"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="Jam"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Aksi"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="320dp"
                    android:background="@drawable/baseline_arrow_circle_right_24"
                    android:backgroundTint="@color/brownAdmin" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="318dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="#6C757D"
                    android:backgroundTint="@color/brownAdmin" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="318dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="#6C757D"
                    android:backgroundTint="@color/brownAdmin" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="318dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="#6C757D"
                    android:backgroundTint="@color/brownAdmin" />

                <Button
                    android:id="@+id/btnPrevious"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="320dp"
                    android:background="@drawable/baseline_arrow_circle_left_24"
                    android:backgroundTint="@color/brownAdmin" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>